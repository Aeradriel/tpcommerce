<p id="notice"><%= notice %></p>

<h1>Listing Donations</h1>

<table>
  <thead>
    <tr>
      <th>Montant</th>
      <th>Date</th>
      <th>User</th>
      <th>Mode paiement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.montant %></td>
        <td><%= donation.date.localtime %></td>
        <td><%= donation.user.email %></td>
        <td><%= donation.mode_paiement %></td>
        <td><%= link_to 'Show', donation %></td>
        <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
        <td><%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Order by user', order: :user %><br/>
<%= link_to 'Order by date', order: :date %><br/>

